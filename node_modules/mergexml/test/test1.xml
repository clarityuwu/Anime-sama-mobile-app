<cfg xmlns="http://www.vallo.me/">
  <!-- Application properties -->
  <apn>
    <name>vRegistrator</name>
    <vers>1.1</vers>
  </apn>
  <!-- Modules -->
  <mod>
    <ath flag="O">auth</ath>
    <sni flag="C">login</sni>
    <snu>signup</snu>
  </mod>
  <!-- Loader modules -->
  <ldm>
    <sni>
      <P opt="wrap">login</P>
      <J opt="load" stay="all">login</J>
      <S>login</S>
    </sni>
    <snu>
      <P opt="wrap">signup</P>
      <S>signup</S>
      <J opt="load">signup</J>
    </snu>
  </ldm>
</cfg>
